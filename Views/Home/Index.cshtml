@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1da1f2;
            color: #fff;
        }

        .container {
            max-width: 800px;
            margin: 100px auto;
            text-align: center;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        p {
            font-size: 24px;
            line-height: 1.5;
            margin-bottom: 50px;
            font-style: italic;
        }

        .btn {
            display: inline-block;
            padding: 15px 30px;
            background-color: #fff;
            color: #1da1f2;
            text-decoration: none;
            border-radius: 25px;
            font-size: 24px;
            transition: background-color 0.3s;
            margin-right: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .btn:hover {
                background-color: #f0f0f0;
            }

        .social-icons {
            margin-top: 50px;
        }

            .social-icons i {
                font-size: 100px;
            }

                .social-icons i:hover {
                    transform: scale(1.1);
                }
    </style>
</head>
<body>

    <div class="container">
        <h1>Welcome to Twitter</h1>
        <p><em>Join the conversation, connect with friends, share your message!!!</em></p>
        <div class="social-icons">
            <i class="fab fa-twitter"></i>
            <p>Discover what's trending on Twitter</p>
        </div>
    </div>

</body>
</html>

